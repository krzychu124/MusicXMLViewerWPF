<UserControl x:Class="MusicXMLScore.View.PartsSegmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicXMLScore.View"
             xmlns:helpers="clr-namespace:MusicXMLScore.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="128.39" d:DesignWidth="300">
    <Grid>
        <ItemsControl x:Name="Parts" ItemsSource="{Binding PartsCollection}" Margin="5">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <helpers:CustomPartsSegmentPanel />
                    <!--<StackPanel Orientation="Vertical"></StackPanel>-->
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
