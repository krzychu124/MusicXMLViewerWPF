<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicXMLScore.Page"
             xmlns:helpers="clr-namespace:MusicXMLScore.Helpers"
             xmlns:Configuration="clr-namespace:MusicXMLScore.Configuration" xmlns:Log="clr-namespace:MusicXMLScore.Log" x:Class="MusicXMLScore.Page.PageView"
             mc:Ignorable="d" Height="350" Width="600" x:Name="uc">
    
    <Grid Margin="5" x:Name="gridmain" Width="Auto" Height="Auto">
        <Border BorderBrush="Black" BorderThickness="0.5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Slider Margin="60,0,60,0" Grid.Row="0" Value="{Binding Width, ElementName=uc}" Maximum="2000" Minimum="300"></Slider>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding List}" Background="Transparent" Margin="20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <helpers:CustomWrapPanel x:Name="ItemsPanelContainer" HorizontalAlignment="Left" IsItemsHost="true" ClipToBounds="false" LastItemRowStretch="False" StretchItemsInRow="False">
                            </helpers:CustomWrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <RadioButton HorizontalAlignment="Right" VerticalAlignment="Top" FlowDirection="RightToLeft" GroupName="a" Width="50" Height="25" Content="Rbtn"></RadioButton>
                <Button Content="test" Command="{Binding TestCommand}" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="40" Height="20"/>
            </Grid>
        </Border>
        <!--<TextBox x:Name="textBox" TextWrapping="Wrap" Text="PageView&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;PageViewNextPage&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&#xA;PageViewNextPage&#xD;&#xA;&#xA;PageViewNextPage"/>-->
    </Grid>
</UserControl>
